<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>jdbcURL</param-name>
        <param-value>jdbc:mysql://localhost:3306/WebApp</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcUsername</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcPassword</param-name>
        <param-value>root</param-value>
    </context-param>    
    
    <filter>
        <filter-name>FiltroLogado</filter-name>
        <filter-class>Filtros.FiltroLogado</filter-class>
    </filter>
    <filter>
        <filter-name>FiltroDeslogado</filter-name>
        <filter-class>Filtros.FiltroDeslogado</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroDeslogado</filter-name>
        <url-pattern>/cadastro.jso</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FiltroDeslogado</filter-name>
        <url-pattern>/login.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FiltroLogado</filter-name>
        <url-pattern>/tutoria.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FiltroLogado</filter-name>
        <url-pattern>/configuracoes.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FiltroLogado</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Autenticador</servlet-name>
        <servlet-class>Servlets.Autenticador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Inserir</servlet-name>
        <servlet-class>Servlets.Inserir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Encerrar</servlet-name>
        <servlet-class>Servlets.Encerrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Excluir</servlet-name>
        <servlet-class>Servlets.Excluir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Alterar</servlet-name>
        <servlet-class>Servlets.Alterar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Autenticador</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Inserir</servlet-name>
        <url-pattern>/Inserir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Encerrar</servlet-name>
        <url-pattern>/Encerrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Excluir</servlet-name>
        <url-pattern>/Excluir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Alterar</servlet-name>
        <url-pattern>/Alterar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!--error-page>
        <location>/assets/jsp/erro.jsp</location>
    </error-page-->
</web-app>
